{% block trending %}
<div class="section pt-5 pb-0">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-7 text-center">
                <h2 class="heading">Trending</h2>
            </div>
        </div> 
        <div class="row">
            <div class="col-lg-12">
                <div class="posts-slide-wrap">
                    <div class="posts-slide" id="posts-slide">
             
                        {% for article in trending %}

                                   <div class="item">
                                                    <div class="post-entry d-lg-flex">
                                                        <div class="me-lg-5 thumbnail mb-4 mb-lg-0">
                                                            <a href="single.html">
                                                                <img src="https://picsum.photos/440/385" alt="Image" class="img-fluid">
                                                            </a>
                                                        </div>
                                                        <div class="content align-self-center">
                                                            <div class="post-meta mb-3">
                                                                <a href="#" class="category">{{article.category.name}}</a>
                                                                &mdash;
                                                                <span class="date">{{article.dateOfCreation|date("m/d/Y")}}</span>
                                                            </div>
                                                            <h2 class="heading"><a href="{{url('app_single_article', {'articleId' : article.slug })}}">{{article.title}}</a></h2>
                                                            <p>{{article.introduction}}</p>
                                                            <a href="#" class="post-author d-flex align-items-center">
                                                                <div class="author-pic">
                                                                    <img src="https://i.pravatar.cc/45" alt="Image">
                                                                </div>
                                                                <div class="text">
                                                                    <strong>Author : {{article.user.username}}</strong>
                                                                  
                                                                </div>
                                                            </a>
                                                        </div>
                                                    </div>
                                   </div>
                        {% endfor %}
          

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}