{% extends 'layout.html.twig' %}

    {% block title %}ADMIN > Manage Comments
{% endblock %}

{% block content %}




       <div class="row mb-5 justify-content-center">
            <div class="col-lg-9">
      
                <h2 class="heading">Comments</h2>
            </div>
        </div>
        <div class="row justify-content-center col-8 col-sm-8 mx-auto">

           {% for comment in comments %}


                                <div class="item">
                                Article : <h3 class="heading mb-3"><a href="{{url('app_single_article', {'articleId' : comment.article.slug })}}" class="heading mb-3">{{comment.article.title}}</a></h3>
                                                    <div class="post-entry d-block small-post-entry-v">
                                
                                        <div class="content">
                                        
                                         <div class="flex justify-content-evenly">   
                                         <div class=""> Author Name : <h4 class="heading mb-3">{{comment.name}}</h4>      </div>
                                            <div class=""> Email : <a href="mailto:{{comment.email}}" class="heading mb-3">{{comment.email}}</a>   </div>
                                         </div>
                                           Comment : <p class="text-black black text-primary">{{comment.comment}}</p>
                                    

                                    {% if comment.isVisible == false %}
                                        <a href="{{url('publish_comment' , {'id' : comment.id })}}" class="btn btn-primary" >Publish</a>
                                        {% endif %}
                                        </div>
                                    </div>
                                </div>

                            <hr />

                            {% endfor %}
        </div>


{% endblock %}

